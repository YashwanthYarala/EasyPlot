<UserControl x:Class="EasyPlot.ParallelPlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasyPlot"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid SizeChanged="Grid_SizeChanged" x:Name="mainGrid" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto" ></RowDefinition>
        </Grid.RowDefinitions>
        <ScrollViewer x:Name="plotScrollViewer" Grid.Row="0" PreviewMouseWheel="plotScrollViewer_PreviewMouseWheel" Focusable="False"  SizeChanged="plotScrollViewer_SizeChanged">
            <WrapPanel Name="plotWrapPanel" Orientation="Vertical"  >
                
            </WrapPanel>
        </ScrollViewer>
        <ScrollViewer x:Name="xaxisScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Visible">
            <WrapPanel Orientation="Vertical" x:Name="xaxisWrapPanel">
                
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
