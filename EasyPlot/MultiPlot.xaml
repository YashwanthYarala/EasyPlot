<UserControl x:Class="EasyPlot.MultiPlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasyPlot"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="multiPlotMainGrid">
        <ScrollViewer x:Name="plotScrollViewer" PreviewMouseWheel="plotScrollViewer_PreviewMouseWheel" Focusable="False">
            <WrapPanel Name="plotWrapPanel" Orientation="Vertical"  Margin="20,10,40,10">
                
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
